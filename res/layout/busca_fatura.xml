<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fundo"
        
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
         >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="17dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titTelaBuscarFatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fatura"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#005566"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titDataBuscarFatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="Mês da Fatura"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <DatePicker
        android:id="@+id/dtDataBuscarFatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.10" />
    
                    <TextView
                        android:id="@+id/titNomeCartaoBuscarFatura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Nome do Cartão"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/dbCartaoBuscarFatura"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >
        
        <ImageButton
            android:id="@+id/btBuscarFatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pesquisar"
            android:text=" Pesquisar " />
        
    </TableRow>
</LinearLayout>

</LinearLayout>
</ScrollView>